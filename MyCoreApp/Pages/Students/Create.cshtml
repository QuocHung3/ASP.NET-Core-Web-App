@page
@model MyCoreApp.Pages.Students.CreateModel
@{
}

<br />
<h2>New Student</h2>

@if(Model.errorMessage.Length > 0)
{
    <div class="alert alert-warning alert-dismissible fade show">
        <strong>@Model.errorMessage</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
} 

<form method="POST">

    <div class="row mb-3">
        <lable class="col-sm-3 col-form-label">ID</lable>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="id" value="@Model.studentInfo.id" />
        </div>
    </div>
    <div class="row mb-3">
        <lable class="col-sm-3 col-form-label">First Name</lable>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="fname" value="@Model.studentInfo.fname" />
        </div>
    </div>

    <div class="row mb-3">
        <lable class="col-sm-3 col-form-label">Last Name</lable>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="lname" value="@Model.studentInfo.lname" />
        </div>
    </div>
    <div class="row mb-3">
        <lable class="col-sm-3 col-form-label">Enrollment Date</lable>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="edate" value="@Model.studentInfo.enrollmentDate" />
        </div>
    </div>

    @if(Model.successMessage.Length > 0)
    {
        <div class="row mb-3">
            <div class="col sm-9">
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <strong>@Model.successMessage</strong>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" arira-lable="Close"></button>
                </div>
            </div>
        </div>
    }

    <div class="row mb-3">
        <div class="offset-sm-3 col-sm-3 d-grid">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
        <div class="col-sm-3 d-grid">
            <a class="btn btn-outline-primary" href="/Students/Index" role="button">Cancel</a>
        </div>
    </div>
</form>